<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml"
      xmlns="http://javafx.com/javafx"
      fx:id="container"
      fx:controller="fx.views.FinishedStats.PropertyStatsController">
    <HBox alignment="CENTER" spacing="10">
        <HBox spacing="5">
            <Label text="Entity:"/>
            <ComboBox fx:id="entityNamesComboBox"/>
        </HBox>
        <Label text="|"/>
        <HBox spacing="5">
            <Label text="Property:"/>
            <ComboBox fx:id="propertyNamesComboBox"/>
        </HBox>
    </HBox>
    <HBox alignment="CENTER">
        <PieChart fx:id="histogramChart"/>
        <Region/>
        <VBox alignment="CENTER" fx:id="avgContainer" spacing="5">
            <Label text="Average:"/>
            <Label fx:id="averageLabel"/>
        </VBox>
    </HBox>
</VBox>
