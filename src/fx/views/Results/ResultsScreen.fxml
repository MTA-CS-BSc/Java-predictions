<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<VBox fx:id="container" alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="fx.controllers.ResultsScreenController">
    <HBox alignment="CENTER" spacing="20">
        <TableView fx:id="simulationsTable" onMouseClicked="#handleSelectedSimulation">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="250" text="Simulation id"/>
                <TableColumn fx:id="startTimestampColumn" prefWidth="200" text="Timestamp"/>
                <TableColumn fx:id="stateColumn" prefWidth="100" text="State"/>
            </columns>
        </TableView>

        <VBox>
            <fx:include source="../PopulationTable/PopulationTable.fxml" fx:id="populationTable"/>
        </VBox>
    </HBox>
</VBox>