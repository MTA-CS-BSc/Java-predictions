<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="container" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="fx.controllers.NewExecutionController">
    <padding>
        <Insets top="20.0" bottom="20.0"/>
    </padding>
    <HBox alignment="CENTER" spacing="50.0">
        <fx:include source="../PopulationTable/PopulationTable.fxml" fx:id="populationTable"/>
        <TableView fx:id="envPropsTable" editable="true">
            <columns>
                <TableColumn fx:id="propertyNameColumn" editable="false" prefWidth="150.0" text="Property Name"/>
                <TableColumn fx:id="propertyTypeColumn" editable="false" text="Type"/>
                <TableColumn fx:id="propertyRangeColumn" editable="false" prefWidth="170.0" text="Range"/>
                <TableColumn fx:id="propertyValueColumn" prefWidth="150.0" text="Value"/>
            </columns>
        </TableView>
    </HBox>
    <HBox>
        <padding>
            <Insets left="20.0" right="20.0"/>
        </padding>
        <Button alignment="CENTER_RIGHT" styleClass="new-execution-screen-button" onAction="#handleClear" mnemonicParsing="false" text="CLEAR"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button styleClass="new-execution-screen-button" onAction="#handleRun" mnemonicParsing="false" text="RUN"/>
    </HBox>
</VBox>
