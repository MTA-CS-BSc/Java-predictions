<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fx.controllers.AppMenuController">
  <children>
      <MenuBar>
        <menus>
          <Menu fx:id="themeMenu" text="Themes" onAction="#handleThemeChanged">
               <items>
                 <MenuItem text="Default" />
                 <MenuItem text="Dark" />
                 <MenuItem text="Windows 7" />
               </items>
          </Menu>
        </menus>
      </MenuBar>
  </children>
</VBox>
