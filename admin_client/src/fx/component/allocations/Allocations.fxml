<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>

<?import javafx.scene.layout.VBox?>
<VBox alignment="TOP_CENTER" xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml"
        fx:controller="fx.component.allocations.AllocationsController"
        fx:id="container">
    <TableView fx:id="allocationsTableView" onMouseClicked="#handleRequestClicked" maxWidth="1150">
        <columns>
            <TableColumn fx:id="requestUuidColumn" prefWidth="250" text="UUID"/>
            <TableColumn fx:id="worldNameColumn" prefWidth="250" text="World Name"/>
            <TableColumn fx:id="createdUserColumn" prefWidth="100" text="Created by"/>
            <TableColumn fx:id="executionsAmountColumn" prefWidth="100" text="Executions Amount"/>
            <TableColumn fx:id="terminationColumn" prefWidth="200" text="Termination"/>
            <TableColumn fx:id="stateColumn" prefWidth="100" text="State"/>
            <TableColumn fx:id="runningSimulationsInRequestColumn" prefWidth="100" text="Running in request"/>
            <TableColumn fx:id="userTotalFinishedSimulations" prefWidth="100" text="User's Finished Simulations"/>
            <TableColumn fx:id="approveColumn" prefWidth="100" text="Approve"/>
            <TableColumn fx:id="declineColumn" prefWidth="100" text="Decline"/>
        </columns>
    </TableView>
</VBox>