<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Separator?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="fx.components.requests.RequestsController"
      fx:id="container" spacing="30">

    <HBox alignment="CENTER">
        <VBox.margin>
            <Insets left="20" right="20"/>
        </VBox.margin>

        <fx:include source="create/CreateRequest.fxml" fx:id="createRequest"/>
    </HBox>

    <Separator style="-fx-background-color: black" orientation="horizontal"/>

    <HBox alignment="CENTER">
        <VBox.margin>
            <Insets left="20" right="20"/>
        </VBox.margin>

        <fx:include source="table/RequestsTable.fxml" fx:id="requestsTable"/>
    </HBox>
</VBox>
